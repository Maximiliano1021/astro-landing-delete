---
import projects from "../../config/projects.json";
---

<h2 class="font-bold text-5xl my-5">Projects</h2>

{
  projects.map((project) => (
    <div class="flex flex-col md:flex-row mb-2 text-center md:text-left">
      <div class="flex-1 p-4">
        <h2 class="text-2xl font-bold my-4">{project.title}</h2>
        <p class="my-2">{project.description}</p>
        <button class="bg-indigo-400 px-3 py-2 hover:bg-indigo-500">
          More Info
        </button>
      </div>

      <div class="flex-1">
        <img src={project.image} class="w-72 m-auto" alt="" />
      </div>
    </div>
  ))
}
